{
    "name": "@hookun/builder",
    "publishConfig": {
        "access": "public"
    },
    "version": "0.2.30",
    "license": "Apache-2.0",
    "scripts": {
        "build": "tsc",
        "test": "run-s test:*",
        "test:type": "tsc --noEmit",
        "test:lint": "eslint --ext .ts src",
        "test:unit": "ava",
        "test:build": "run-s test:build:*",
        "test:cleanup": "ts-node src/removeCLI.ts docs",
        "test:build:build": "ts-node src --src sample-input --dest docs",
        "start": "run-s start:*",
        "start:cleanup": "ts-node src/removeCLI.ts dist",
        "start:watch": "ts-node src --src sample-input --dest dist --watch --debug"
    },
    "bin": {
        "build-page": "lib/index.js",
        "rmrf": "lib/removeCLI.js"
    },
    "files": [
        "lib",
        "files",
        "@types",
        "tsconfig.base.json",
        ".eslintrc.*"
    ],
    "dependencies": {
        "@hookun/parse-animation-shorthand": "^0.1.0",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@rollup/plugin-node-resolve": "^7.1.1",
        "@rollup/plugin-replace": "^2.3.1",
        "@rollup/plugin-sucrase": "^3.0.0",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "cheerio": "^1.0.0-rc.3",
        "cssnano": "^4.1.10",
        "eslint": "^6.8.0",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^2.5.1",
        "fast-glob": "^3.2.2",
        "magic-string": "^0.25.7",
        "postcss": "^7.0.27",
        "postcss-nested": "^4.2.1",
        "postcss-selector-parser": "^6.0.2",
        "rollup": "^2.2.0",
        "rollup-plugin-terser": "^5.3.0",
        "rollup-pluginutils": "^2.8.2",
        "systemjs": "^6.2.6"
    },
    "devDependencies": {
        "@types/cheerio": "^0.22.17",
        "@types/cssnano": "^4.0.0",
        "@types/jsdom": "^12.2.4",
        "@types/node": "^13.9.4",
        "@types/react": "^16.9.25",
        "@types/react-dom": "^16.9.5",
        "@types/react-redux": "^7.1.7",
        "ava": "^3.5.1",
        "indexeddbshim": "^6.1.0",
        "jsdom": "^16.2.1",
        "npm-run-all": "^4.1.5",
        "ts-node": "^8.8.1",
        "typescript": "^3.8.3"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "eslintConfig": {
        "extends": ".eslintrc.node.json",
        "env": {
            "node": true
        },
        "overrides": [
            {
                "files": [
                    "./*"
                ],
                "rules": {
                    "@typescript-eslint/no-var-requires": "off"
                }
            },
            {
                "files": [
                    "src/util/**"
                ],
                "extends": ".eslintrc.es.json"
            },
            {
                "files": [
                    "src/domutil/**"
                ],
                "extends": ".eslintrc.dom.json"
            }
        ]
    }
}
